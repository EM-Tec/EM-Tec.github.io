&lt;td>5&lt;/td>
&lt;td>左&lt;/td>
&lt;/tr>
&lt;tr>
&lt;td>%&lt;/td>
&lt;td>餘數(mod)&lt;/td>
&lt;td>5&lt;/td>
&lt;td>左&lt;/td>
&lt;/tr>
&lt;tr>
&lt;td>+/-&lt;/td>
&lt;td>加法/減法&lt;/td>
